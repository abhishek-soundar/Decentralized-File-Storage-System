# 🌐 Environment
NODE_ENV=development
PORT=4000

# 💾 Database (MongoDB)
MONGO_URI=mongodb://localhost:27017/dfs

# 🔐 Authentication
JWT_SECRET=your_super_secret_key_here
JWT_EXPIRES_IN=1d

# 📁 File Upload Configuration
MAX_UPLOAD_SIZE_BYTES=524288000    # 500MB max
TEMP_UPLOAD_DIR=./tmp/uploads
ALLOWED_MIMETYPES=image/*,video/*,application/pdf,application/zip

# 📦 IPFS / Pinata Configuration
# Preferred authentication method is via JWT (Bearer Token)
PINATA_JWT=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9....   # <-- paste full JWT here

# If you prefer to use API Key & Secret instead (less secure), you can use these instead:
PINATA_API_KEY=your_pinata_api_key_here
PINATA_API_SECRET=your_pinata_api_secret_here


REDIS_URL=
# 🧠 Web3.Storage (Optional fallback, can be left empty)
WEB3_STORAGE_TOKEN=

# 🧰 Logging
LOG_LEVEL=info
